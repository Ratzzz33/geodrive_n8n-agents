            "page": "={{ $json.body.page || 0 }}",
            "added": "={{ $json.body.added || 0 }}",
            "updated": "={{ $json.body.updated || 0 }}",
            "ok": "={{ $json.body.ok !== undefined ? $json.body.ok : true }}",
            "msg": "={{ $json.body.msg || '' }}"
          }
        },
        "options": {}
      },
      "id": "data-table-node",
      "name": "Save Progress",
