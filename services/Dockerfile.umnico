# Dockerfile для Umnico Playwright Service
FROM mcr.microsoft.com/playwright:v1.40.0-jammy

WORKDIR /app

# Установить зависимости
COPY package.json ./
RUN npm install --production

# Скопировать собранные JS файлы (TypeScript уже собран локально)
COPY dist/playwright-umnico.js ./playwright-umnico.js

# Создать директорию для данных
RUN mkdir -p /data

# Открыть порт
EXPOSE 3001

# Запуск
CMD ["node", "playwright-umnico.js"]

